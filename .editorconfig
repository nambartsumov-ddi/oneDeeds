root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
insert_final_newline = true
indent_style = spcae
indent_size = 2

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,jsx,html,scss}]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
